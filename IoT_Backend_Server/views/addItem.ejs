<body>
    <form name="addform" action="addItem" method="post" accept-charset="utf-8" >
        <h1>新增商品</h1>
        <div class="form-group">
            <label>商品名稱:</label>
            <input type="text" class="form-control" name="itemName"/>
        </div>
        <div class="form-group">
            <label>商品價格:</label>
            <input type="number" class="form-control" name="itemPrice">
        </div>
        <div class="form-group">
            <label>商品網址:</label>
            <input type="text" class="form-control" name="itemImage">
        </div>
        <div>
            <input type='submit' class="btn btn-primary" value='Submit'>
            <input type='reset' class="btn btn-outline-primary" value='Reset'>
            <input type='button' class="btn btn-outline-primary" value='Back' onclick="javascript: location.href='/Items'">
        </div>
    </form>
</body>

</html>